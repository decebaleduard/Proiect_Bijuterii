@page "/" 
@model Proiect_Bijuterii.Pages.Bijuterii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bijuterie[0].Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bijuterie[0].Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bijuterie[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model=> model.Bijuterie[0].Material.DenumireMaterial)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bijuterie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.Material)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
